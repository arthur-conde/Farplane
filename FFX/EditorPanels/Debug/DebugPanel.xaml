<UserControl x:Class="Farplane.FFX.EditorPanels.Debug.DebugPanel"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:Farplane.FFX.EditorPanels.Debug">
	<GroupBox Header="Debug Options">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<StackPanel Name="StackDebugOptions"
					Grid.Column="0">
				<CheckBox Name="CheckEnemyInvincible"
						Content="Enemies invincible"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckPartyInvincible"
						Content="Allies invincible"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckEnemyControl"
						Content="Control enemies"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckGamepadCamera"
						Content="Control camera with gamepad"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckOverdriveAlways"
						Content="Overdrive always available"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckAlwaysCritical"
						Content="Always critical hit"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckAlwaysDeal1"
						Content="Everything hits for 1"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckAlwaysDeal10000"
						Content="Everything hits for 10000"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckAlwaysDeal99999"
						Content="Everything hits for 99999"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckAlwaysRareDrop"
						Content="Always rare drop and steal"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckBattleAPx100"
						Content="Battle AP x100"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckBattleGilx100"
						Content="Battle gil x100"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckSensorEnabled"
						Content="Sensor always enabled"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Name="CheckShowUnknownFlags"
						Content="Shown unknown flags (Warning!)"
						Margin="2,7,2,2"
						Checked="CheckShowUnknownFlags_OnChecked"
						Unchecked="CheckShowUnknownFlags_OnChecked"/>
				<TextBlock Name="TextUnknownWarning"
						Margin="5"
						TextWrapping="Wrap"
						Visibility="Collapsed">Unknown flags may crash your game or cause glitches. If you find out what a flag does, please include the Farplane version number when making a report.</TextBlock>
			</StackPanel>
			<StackPanel Name="StackUnknown"
					Grid.Column="1"
					Visibility="Hidden">
				<CheckBox Content="Unknown 1"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 2"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 3"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 4"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 5"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 6"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 7"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 8"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 9"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 10"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 11"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 12"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 13"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 14"
						Margin="2"
