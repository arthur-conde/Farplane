						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 15"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 16"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 18"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 19"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
				<CheckBox Content="Unknown 20"
						Margin="2"
						Checked="CheckBox_Changed"
						Unchecked="CheckBox_Changed"/>
			</StackPanel>
		</Grid>
	</GroupBox>
</UserControl>
